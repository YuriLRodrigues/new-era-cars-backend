model Favorites {
  id              String        @id @unique @default(uuid())
  User            User?         @relation(fields: [userId], references: [id], onDelete: SetNull)
  userId          String?
  advertisement   Advertisement @relation(fields: [advertisementId], references: [id], onDelete: Cascade)
  advertisementId String
  createdAt       DateTime      @default(now())
  updatedAt       DateTime
}

model User {
  id            String          @id @unique @default(uuid())
  avatar        String
  name          String
  username      String          @unique
  email         String          @unique
  password      String
  roles         UserRole[]      @default([])
  advertisement Advertisement[]
  favorites     Favorites[]
  likes         Like[]
  revoked       DateTime?
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
}

model Like {
  id              String         @id @unique @default(uuid())
  comment         Comment        @relation(fields: [commentId], references: [id])
  commentId       String
  user            User           @relation(fields: [userId], references: [id])
  userId          String
  Advertisement   Advertisement? @relation(fields: [advertisementId], references: [id])
  advertisementId String?
  createdAt       DateTime       @default(now())
  updatedAt       DateTime

  @@unique([commentId, userId])
}

model Comment {
  id              String         @id @default(uuid())
  stars           Float
  comment         String
  advertisement   Advertisement? @relation(fields: [advertisementId], references: [id])
  advertisementId String?
  likes           Like[]
  createdAt       DateTime       @default(now())
  updatedAt       DateTime
}

model Image {
  id                     String         @id @default(uuid())
  url                    String
  advertisementImages    Advertisement? @relation("images", fields: [advertisementId], references: [id], onDelete: Cascade)
  advertisementId        String?
  advertisementThumbnail Advertisement? @relation("thumbnail")
  Brand                  Brand[]
  createdAt              DateTime       @default(now())
  updatedAt              DateTime
}

model Brand {
  id            String          @id @default(uuid())
  name          String
  image         Image           @relation(fields: [imageId], references: [id])
  imageId       String
  Advertisement Advertisement[]
  createdAt     DateTime
  updatedAt     DateTime
}

model Advertisement {
  id           String      @id @default(uuid())
  comments     Comment[]
  km           Float
  localization String
  phone        String
  images       Image[]     @relation("images")
  thumbnail    Image       @relation("thumbnail", fields: [thumbnailId], references: [id])
  thumbnailId  String      @unique
  user         User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId       String
  favorites    Favorites[]
  title        String
  description  String
  year         Int
  likes        Like[]
  details      String[]
  brand        Brand       @relation(fields: [brandId], references: [id])
  brandId      String
  doors        Doors
  model        Model
  color        Color
  price        Float
  wasSold      Boolean
  salePrice    Float
  gearBox      GearBox
  fuel         Fuel
  capacity     Capacity
  createdAt    DateTime
  updatedAt    DateTime
}
